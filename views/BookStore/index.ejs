<% layout('layouts/boilerplate') %>

<h1>All books</h1>
<ul>
  <% for(let book of books){ %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(book.images.length){%> 
        <img class="img-fluid" src="<%=book.images[0].url%>" alt="" />
        <% }else{ %> 
         <img class="img-fluid" src="https://res.cloudinary.com/dpoxgligk/image/upload/v1668396801/bookStore/glekzzqv9qqzt3xc2yha.jpg" alt=""> 
          <% } %> 
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=book.title %></h5>
          <p class="card-text"><%=book.description %></p>
          <p class="card-text">
            <small class="text-muted"><%=book.author %> </small>
          </p>
          <a class="btn btn-primary" href="/bookStore/<%=book._id%>">view <%=book.title%> </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
